<p id="notice"><%= notice %></p>

<h1>Bets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Team1</th>
      <th>Team2</th>
      <th>Amount</th>
      <th>Earnings</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.team1 %></td>
        <td><%= bet.team2 %></td>
        <td><%= bet.amount %></td>
        <td><%= bet.earnings %></td>
        <td><%= bet.result %></td>
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#", class: "btn btn-primary btn-sm", data: { toggle: "modal", target: "#newBetModal" } do %>
  New Bet
<% end %>

<div class="modal fade" id="newBetModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render partial: "bets/form", locals: { bet: Bet.new } %>
    </div>
  </div>
</div>
